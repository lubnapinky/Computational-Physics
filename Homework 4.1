Heat capacity of a solid
from pylab import plot, show 
from numpy import zeros
import math

x=0.0
def f(x):
    return (x**4)*math.exp(x)/(math.exp(x)-1)**2

T = int(input("Enter the value of T:"))  
T_c= 428.0 # Debye Temp    
D = 6.022e28  #density if atoms
kb = 1.3806488e-23 # boltzmann constant
V= 1000 # volume
p = (9*V*D*kb*((T/T_c)**3))

N = 1000
a = 0.0
b = T/T_c
h = (b-a)/N
s = 0.0 + 0.5*f(b)
ptx = zeros(1000)
pty = zeros(1000)

for k in range(1,N):
    s += f(a+k*h)

print(p*h*s)


for x in range(1,10,1):
    print(f(x))
    ptx[x] = x     
    pty[x] = f(x)


plot(ptx,pty)
show()
    
    
