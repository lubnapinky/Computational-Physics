#(b)Simple expansion
for x in range (0,110,10):
    e=1.0
    s=1.0
    n=1.0
    while n<100:
        f=math.factorial(n)
        s=(x**n)/(f)
        e=e+s
        ex=1/e
        n=n+1
        
        
    print(x,ex)

